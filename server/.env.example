# DarkFleet Server - Environment Variables
# Copy this file to .env and fill in your values

# API Bearer Token for server authentication (REQUIRED)
# Generate a secure random token: openssl rand -hex 32
API_BEARER_TOKEN=your_secure_api_token_here

# Watchlist API Authentication Token
WATCHLIST_API_TOKEN=your_api_token_here

# Python Environment
PYTHON_ENV=development

# Optional: Custom config file path
# CONFIG_PATH=./config/config.yml

# Optional: Log level override
# LOG_LEVEL=INFO

# Keycloak OIDC Configuration (for admin panel authentication)
# Set KEYCLOAK_ENABLED=true to enable admin authentication via Keycloak
# KEYCLOAK_ENABLED=false
# KEYCLOAK_SERVER_URL=https://keycloak.example.com
# KEYCLOAK_REALM=darkfleet
# KEYCLOAK_CLIENT_ID=darkfleet-admin
# KEYCLOAK_CLIENT_SECRET=your_client_secret_here
# KEYCLOAK_ADMIN_ROLE=darkfleet-admin
