{
  "name": "darkfleet-client",
  "version": "1.0.0",
  "description": "DarkFleet desktop client for maritime AIS tracking",
  "main": "dist/main/index.js",
  "author": "DarkFleet Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:electron": "tsc --project tsconfig.main.json && wait-on http://localhost:5173 && NODE_ENV=development electron dist/main/index.js",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "vite build",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "rebuild": "echo 'No native modules to rebuild'"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "sql.js": "^1.11.0",
    "flag-icons": "^7.2.1",
    "maplibre-gl": "^4.0.0",
    "serialport": "^12.0.0",
    "shapefile": "^0.6.6",
    "ws": "^8.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/sql.js": "^1.4.9",
    "@types/node": "^20.10.7",
    "concurrently": "^8.2.2",
    "electron": "^22.3.0",
    "electron-builder": "^26.6.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.darkfleet.client",
    "productName": "DarkFleet",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
